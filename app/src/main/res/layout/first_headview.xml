<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pl="http://schemas.android.com/apk/res-auto"

    >

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner_first_head"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@mipmap/choice_grid1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@mipmap/choice_grid2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@mipmap/choice_grid6" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@mipmap/choice_grid4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="离抢购结束还有"
            android:textColor="#000000"/>
        <com.yuzhaigou.peilei.yuzhaigou.utils.CustomProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            pl:speed = "hour"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="时"
            android:textColor="#000000"/>
        <com.yuzhaigou.peilei.yuzhaigou.utils.CustomProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            pl:speed = "minute"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="分"
            android:textColor="#000000"/>
        <com.yuzhaigou.peilei.yuzhaigou.utils.CustomProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            pl:speed = "second"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="秒"
            android:textColor="#000000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最新推荐"
        android:layout_margin="8dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/first_head_recycle2"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
</LinearLayout>